<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.samkeet.takeup.organisation.Profile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="18dp"
        android:paddingLeft="18dp"
        android:paddingRight="18dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="18dp"
            android:orientation="horizontal">
            <TextView
                android:gravity="center"
                android:text="Name: "
                android:textSize="14sp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <EditText
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="14sp"
                android:id="@+id/setName"
                tools:text="Napolean solo"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="#808080"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="18dp"
            android:orientation="horizontal">
            <TextView
                android:gravity="center"
                android:text="Email: "
                android:textSize="14sp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <EditText
                android:gravity="center"
                android:layout_weight="1"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:textSize="14sp"
                android:id="@+id/setEmail"
                tools:text="test@test.com"
                android:textColor="#808080"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="18dp"
            android:orientation="horizontal">
            <TextView
                android:gravity="center"
                android:text="Phone number: "
                android:textSize="14sp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <EditText
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="14sp"
                android:id="@+id/setPhone"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLines="1"
                tools:text="0000000000"
                android:textColor="#808080"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="18dp"
            android:orientation="horizontal">
            <TextView
                android:gravity="center"
                android:text="Address: "
                android:textSize="14sp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <EditText
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="14sp"
                android:id="@+id/setAddress"
                android:inputType="textMultiLine"
                android:imeOptions="actionNext"
                tools:text="#101, whilte building, near country club, banaglore."
                android:textColor="#808080"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="18dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Gender: "
                android:textSize="14sp" />

            <RadioGroup
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:gravity="center"
                    android:imeOptions="actionNext"
                    android:maxLines="1"
                    android:text="Male"
                    android:id="@+id/setGenderMale"
                    android:textColor="#808080"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:gravity="center"
                    android:imeOptions="actionNext"
                    android:maxLines="1"
                    android:text="Female"
                    android:id="@+id/setGenderFemale"
                    android:textColor="#808080"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="18dp"
            android:orientation="horizontal">
            <TextView
                android:gravity="center"
                android:text="Date of birth: "
                android:textSize="14sp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <EditText
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="14sp"
                android:id="@+id/setDateOfBirth"
                tools:text="12-12-1997"
                android:textColor="#808080"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <Button
            android:id="@+id/edit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="18dp"
            android:text="edit"/>
    </LinearLayout>


</RelativeLayout>
